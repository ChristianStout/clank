program    =  { SOI ~ top_level* ~ EOI }
top_level  =  {
    func
  | struct
  | const
}
func       =  { "fn " ~ id ~ "(" ~ ")" ~ "->" ~ type ~ "{" ~ stmt* ~ "}" }
struct     =  { "struct " ~ id ~ "{" ~ structbd? ~ "}" }
structbd   =  { id ~ ":" ~ type ~ ("," ~ id ~ ":" ~ type)* ~ ","? }
const      =  { "const " ~ id ~ ":" ~ type ~ "=" ~ expr ~ ";" }
type       =  { "i32" | "u8" | "char" | "bool" | "string" | id }
alpha      =  { 'a'..'z' | 'A'..'Z' | "_" }
digit      =  { '0'..'9' }
stmt       =  {
    expr ~ ";"
  | "return " ~ expr ~ ";"
}
expr       =  {
  //   num ~ "+" ~ num
  // | num ~ "-" ~ num
  // | num ~ "*" ~ num
  // | num ~ "/" ~ num
  // | num ~ "%" ~ num
  // | num ~ "+=" ~ num
  // | num ~ "-=" ~ num
  // | num ~ "*=" ~ num
  // | num ~ "/=" ~ num
  // | num ~ "%=" ~ num
  // | num ~ "==" ~ num
  // | num ~ "!=" ~ num
  // | num ~ ">" ~ num
  // | num ~ "<" ~ num
  // | num ~ ">=" ~ num
  // | num ~ "<=" ~ num
  // | num ~ "=" ~ num
  | string
  | char
  | id
  | num
}
id         = @{ alpha ~ (alpha | digit)* }
num        = @{ digit* }
string     = ${ "\"" ~ inner ~ "\"" }
inner      = @{ inner_char* }
char       = ${ "'" ~ inner_char ~ "'" }
inner_char =  {
    !("\"" | "\\") ~ ANY
    | "\\" ~ ("\"" | "\\" | "/" | "b" | "f" | "n" | "r" | "t")
    | "\\" ~ ("u" ~ ASCII_HEX_DIGIT{4})
}
WHITESPACE = _{ (" " | "\t" | "\r" | "\n") }
COMMENT    = _{ ("//" ~ ^"\n"* ~ "\n") | ("/*" ~ ANY* ~ "*/") }
